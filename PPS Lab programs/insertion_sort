#include<stdio.h>
int printArray(int a[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		printf("%4d",a[i]);
	}
}
void insertionSort(int a[], int n)
{
	int i,j,temp;
	for(i=0;i<n;i++)
	{
		int temp;
		temp=a[i];
		j=i-1;
		while(j >= 0 && a[j]>temp )
		{
			a[j+1] = a[j];
			j--;
		}
		a[j+1]=temp;
	}
//	printArray(a,n);	
}
int main()
{
    int a[100], i, n;
    printf("Enter the number of elements to be sorted: ");
    scanf("%d", &n);
    
    for(i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
    printf("\n Before Sorting\n\n");
    printArray(a,n);
    // call the function insertion Sort
    insertionSort(a, n);
    printf("\n\n After Sorting\n\n");
    printArray(a,n);
    return 0;
}
